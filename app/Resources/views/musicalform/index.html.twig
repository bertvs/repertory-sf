{% extends 'main.html.twig' %}

{% block title %}
  <a class="section" href="/" rel="home">Repertory</a>
  <div class="divider"> / </div>
  <div class="section active">Musical Forms</div>
{% endblock %}

{% block body %}
<div class="ui basic padded segment" id="table">
    <table class="ui selectable celled striped table index" width="100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
            </tr>
        </thead>
        <tbody>
        {% for musicalForm in musicalForms %}
            <tr class="link" onclick="document.location = '{{ path('musicalform_show', { 'id': musicalForm.id }) }}';">
                <td>{{ musicalForm.id }}</td>
                <td>{{ musicalForm.name }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
<div class="ui basic padded segment" id="links">
    <a class="ui basic button" href="{{ path('musicalform_new') }}">
        <i class="add circle icon"></i>Add musical form
    </a>
</div>
{% endblock %}