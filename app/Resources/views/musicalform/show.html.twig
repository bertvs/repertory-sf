{% extends 'main.html.twig' %}

{% block title %}
  <a class="section" href="/" rel="home">Repertory</a>
  <div class="divider"> / </div>
  <a class="section" href="{{ path('musicalform_index') }}">Musical Forms</a>
  <div class="divider"> / </div>
  <div class="section active" >{{ musicalForm }}</div>
{% endblock %}

{% block body %}

<div class="ui basic padded segment" id="table">
    <table class="ui celled striped collapsing definition table">
        <tbody>
            <tr>
                <td>Id</td>
                <td>{{ musicalForm.id }}</td>
            </tr>
            <tr>
                <td>Name</td>
                <td>{{ musicalForm.name }}</td>
            </tr>
        </tbody>
    </table>
</div>

<div class="ui basic padded segment" id="links">
    <a class="ui basic button" href="{{ path('musicalform_edit', { 'id': musicalForm.id }) }}"><i class="edit icon"></i>Edit</a>
    {{ form_start(delete_form) }}
        <button class="ui basic negative button" type="submit"><i class="remove circle icon"></i>Delete</button>
    {{ form_end(delete_form) }}
</div>
{% endblock %}