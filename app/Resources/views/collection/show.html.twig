{% extends 'main.html.twig' %}

{% block title %}
  <a class="section" href="/" rel="home">Repertory</a>
  <div class="divider"> / </div>
  <a class="section" href="{{ path('collection_index') }}">Collections</a>
  <div class="divider"> / </div>
  <div class="section active" >{{ collection.title }}</div>
{% endblock %}

{% block body %}

<div class="ui basic padded segment" id="table">
    <table class="ui celled striped collapsing definition table">
        <tbody>
            <tr>
                <td>Id</td>
                <td>{{ collection.id }}</td>
            </tr>
            <tr>
                <td>Title</td>
                <td>{{ collection.title }}</td>
            </tr>
            <tr>
                <td>Description</td>
                <td>{{ collection.description }}</td>
            </tr>
            <tr>
                <td>Musical form</td>
                <td class="selectable">{% if collection.musicalForm %}<a href="{{ path('musicalform_show', { 'id': collection.musicalForm.id }) }}">{{ collection.musicalForm }}</a>{% endif %}</td>
            </tr>
        </tbody>
    </table>
</div>

<div class="ui basic padded segment" id="links">
    <a class="ui basic button" href="{{ path('collection_edit', { 'id': collection.id }) }}"><i class="edit icon"></i>Edit</a>
    {{ form_start(delete_form) }}
        <button class="ui basic negative button" type="submit"><i class="remove circle icon"></i>Delete</button>
    {{ form_end(delete_form) }}
</div>
{% endblock %}