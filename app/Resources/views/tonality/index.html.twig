{% extends 'main.html.twig' %}

{% block title %}
  <a class="section" href="/" rel="home">Repertory</a>
  <div class="divider"> / </div>
  <div class="section active">Tonalities</div>
{% endblock %}

{% block body %}
<div class="ui basic padded segment" id="table">
    <table class="ui selectable celled striped table index" width="100%">
        <thead>
            <tr>
                <th>Code</th>
                <th>Root</th>
                <th>Mode</th>
                <th>Key signature</th>
            </tr>
        </thead>
        <tbody>
        {% for tonality in tonalities %}
            <tr class="link" onclick="document.location = '{{ path('tonality_show', { 'code': tonality.code }) }}';">
                <td>{{ tonality.code }}</td>
                <td>{{ tonality.root }}</td>
                <td>{{ tonality.mode }}</td>
                <td>{{ tonality.keySignature }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
<div class="ui basic padded segment" id="links">
    <a class="ui basic button" href="{{ path('tonality_new') }}">
        <i class="add circle icon"></i>Add tonality
    </a>
</div>
{% endblock %}