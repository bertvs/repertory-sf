{% extends 'main.html.twig' %}

{% block title %}
  <a class="section" href="/" rel="home">Repertory</a>
  <div class="divider"> / </div>
  <div class="section active">Statuses</div>
{% endblock %}

{% block body %}
<div class="ui basic padded segment" id="table">
    <table class="ui selectable celled striped table index" width="100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
        {% for status in statuses %}
            <tr class="link" onclick="document.location = '{{ path('status_show', { 'id': status.id }) }}';">
                <td>{{ status.id }}</td>
                <td>{{ status.description }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
<div class="ui basic padded segment" id="links">
    <a class="ui basic button" href="{{ path('status_new') }}">
        <i class="add circle icon"></i>Add status
    </a>
</div>
{% endblock %}