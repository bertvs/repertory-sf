{% extends 'main.html.twig' %}

{% block title %}
  <a class="section" href="/" rel="home">Repertory</a>
  <div class="divider"> / </div>
  <div class="section active">Concerts</div>
{% endblock %}

{% block body %}
<div class="ui basic padded segment" id="table">
    <table class="ui selectable celled striped table index" width="100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Location</th>
                <th>Date</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
        {% for concert in concerts %}
            <tr class="link" onclick="document.location = '{{ path('concert_show', { 'id': concert.id }) }}';">
                <td>{{ concert.id }}</td>
                <td>{{ concert.location }}</td>
                <td>{% if concert.date %}{{ concert.date|date('Y-m-d') }}{% endif %}</td>
                <td>{{ concert.description }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
<div class="ui basic padded segment" id="links">
    <a class="ui basic button" href="{{ path('concert_new') }}">
        <i class="add circle icon"></i>Add concert
    </a>
</div>
{% endblock %}